doctype html
html
	head
		title Node User Login
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
	body
		nav.navbar.navbar-default.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-targets='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle-Navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') Node Auth
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						li(class=(title == 'Members' ? 'active': ''))
							a(href='/') Members
						if !user
							li(class=(title == 'Register' ? 'active': ''))
								a(href='/users/register') Register
							li(class=(title == 'Login' ? 'active': ''))
								a(href='/users/login') Log In
					ul.nav.navbar-nav.navbar-right
						if user
							li
								a(href='/users/logout') Logout
		.container
			!=messages()
			block content
	script(src='/javascripts/jquery.js')
	script(src='/javascripts/bootstrap.js')